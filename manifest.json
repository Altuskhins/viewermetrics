{
  "manifest_version": 2,
  "name": "Viewer Metrics",
  "version": "0.9.951",
  "description": "Track and analyze stream viewers with bot detection",
  "permissions": [
    "storage",
    "tabs",
    "*://gql.twitch.tv/*",
    "*://*.twitch.tv/*"
  ],
  "background": {
    "page": "background/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "shared/browser-polyfill.js",
        "content/core/settings-manager.js",
        "content/core/error-handler.js",
        "content/ui/html-templates.js",
        "content/core/content.js"
      ],
      "css": [
        "ui/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "pages/tracking.html",
    "pages/tracking.js",
    "pages/tracking.css",
    "pages/viewer.html",
    "pages/viewer.js",
    "pages/viewer.css",
    "ui/*.css",
    "lib/*.js",
    "icons/*.png"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "viewermetrics@extension",
      "strict_min_version": "109.0"
    }
  }
}
